<?xml version="1.0" encoding="utf-8" ?><!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fetch.common.core.mapper.UserMapper">

    <sql id="selectUserVo">
        select
            id, user_name,nick_name, password,status,email,phone_number,
            sex,avatar,user_type,create_by,create_time,remark
    </sql>

    <select id="selectUserByUsername" resultType="com.fetch.common.core.domain.SysUser" parameterType="sysUser">
        <include refid="selectUserVo"/>
        from sys_user
        where username = #{userName}
        and del_flag = 0
    </select>

</mapper>